// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Transaction {
  id           Int      @id @default(autoincrement())
  date         DateTime // Transaction date
  docNumber    String   @unique // Document number for transaction identification
  debitAmount  Float? // Amount debited
  creditAmount Float? // Amount credited
  balance      Float // Balance after transaction
  description  String // Detailed transaction information
  createdAt    DateTime @default(now()) // Record creation time
  updatedAt    DateTime @updatedAt // Record update time

  @@index([date]) // Indexing the date field for efficient querying
  @@index([docNumber]) // Indexing the document number for uniqueness
  @@index([debitAmount, creditAmount]) // Combined index for efficient filtering
}
